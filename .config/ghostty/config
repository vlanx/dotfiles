# Configuration
shell-integration = zsh
window-theme = system
bold-is-bright = true
clipboard-read = allow
clipboard-write = allow
font-size = 13.5
window-padding-balance = true
cursor-style = bar
cursor-style-blink = true

# Gruvbox-material colorscheme
theme = gruvbox-minimal-hard-dark
#theme = rose-pine-moon
# theme = light:Rose Pine Dawn,dark:Rose Pine

# Font specification
# font-family = JetBrains Mono NL
font-family = SF Mono
font-style = Semibold
font-style-bold = Heavy
font-style-italic = Semibold Italic
font-style-bold-italic = Heavy Italic

# Map 'Command+a' to 'Ctrl-b'. This is usefull to remap the tmux default
# prefix command to a more ergonomic position.
keybind = super+a=text:\x02
# Map 'Command+s' to 'Ctrl-s'. Same as above but this is to send the prefix remotely for nested tmux session.
keybind = super+s=text:\x13

keybind = super+h=text:\x1b[D
keybind = super+j=text:\x1b[B
keybind = super+k=text:\x1b[A
keybind = super+l=text:\x1b[C
